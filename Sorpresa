<script>
  // Data (si quieres editar textos, cámbialos aquí)
  const nickname = prompt("Escribe el nombre o apodo para la firma (ej: 'mi vida', 'tu [apodo]'):", "Tu apodo") || "tu [apodo]";
  document.getElementById('apodo').textContent = nickname;

  const parts = Array.from(document.querySelectorAll('.part'));
  let idx = 0;

  function showPart(i){
    if(i<0 || i>=parts.length) return;
    parts[i].classList.add('visible');
    parts[i].setAttribute('aria-hidden','false');
  }
  function hideAll(){
    parts.forEach(p=>{
      p.classList.remove('visible');
      p.setAttribute('aria-hidden','true');
    });
  }

  document.getElementById('nextBtn').addEventListener('click', ()=>{
    if(idx < parts.length){
      showPart(idx);
      idx++;
      if(idx >= parts.length){
        document.getElementById('nextBtn').textContent = "Todos revelados ✓";
        document.getElementById('nextBtn').disabled = true;
      }
    }
  });
  document.getElementById('revealAll').addEventListener('click', ()=>{
    parts.forEach((p,i)=> setTimeout(()=> showPart(i), i*120));
    idx = parts.length;
    document.getElementById('nextBtn').textContent = "Todos revelados ✓";
    document.getElementById('nextBtn').disabled = true;
  });
  document.getElementById('resetBtn').addEventListener('click', ()=>{
    hideAll();
    idx = 0;
    document.getElementById('nextBtn').textContent = "Revelar siguiente";
    document.getElementById('nextBtn').disabled = false;
  });

  // prepare WhatsApp text
  function buildWhatsAppText(){
    const lines = parts.map(p => {
      // use the visible text but when copying include all parts in order
      const heading = p.querySelector('h3')?.textContent || '';
      const body = p.querySelector('p')?.textContent || '';
      return `${heading}\n${body}`;
    });
    return lines.join('\n\n') + `\n\n— Tu ${nickname} 💖`;
  }

  // copy to clipboard ready-to-paste (user can paste into WhatsApp)
  document.getElementById('copyBtn').addEventListener('click', async ()=>{
    const txt = buildWhatsAppText();
    try{
      await navigator.clipboard.writeText(txt);
      document.getElementById('copyBtn').textContent = "Copiado ✓";
      setTimeout(()=> document.getElementById('copyBtn').textContent = "Copiar para WhatsApp",1500);
    }catch(e){
      alert("No se pudo copiar automáticamente. Selecciona y copia manualmente:\n\n" + txt);
    }
  });

  // small initial animation: reveal first part after load
  window.addEventListener('load', ()=> {
    setTimeout(()=> showPart(0), 500);
    idx = 1;
  });
</script>
</body>
